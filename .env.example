# ðŸ”§ Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=5000
APP_NAME=Expense Management System
APP_VERSION=1.0.0

# ==========================================
# CORS & SECURITY CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
TRUSTED_PROXIES=127.0.0.1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# MongoDB Configuration
DATABASE_URL=mongodb://localhost:27017/expense_management
MONGODB_URI=mongodb://localhost:27017/expense_management
MONGODB_TEST_URI=mongodb://localhost:27017/expense_management_test
MONGODB_OPTIONS=retryWrites=true&w=majority

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=expense-management-system
JWT_AUDIENCE=expense-management-users

# Refresh Token Configuration
REFRESH_TOKEN_SECRET=your_refresh_token_secret_different_from_jwt_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_for_express_sessions
SESSION_NAME=expense_mgmt_session
SESSION_MAX_AGE=86400000

# ==========================================
# FILE UPLOAD & STORAGE
# ==========================================
# Local File Storage
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./temp
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,image/webp

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=expense-management-receipts
AWS_S3_ENDPOINT=

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GOOGLE_CLOUD_BUCKET=expense-management-receipts

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your_azure_account
AZURE_STORAGE_KEY=your_azure_key
AZURE_STORAGE_CONTAINER=receipts

# ==========================================
# EXTERNAL API SERVICES
# ==========================================
# Currency Exchange APIs
CURRENCY_API_KEY=your_currency_api_key_here
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest
CURRENCY_API_PROVIDER=exchangerate-api
CURRENCY_FALLBACK_API_KEY=your_fallback_currency_api_key

# ExchangeRate-API.com
EXCHANGERATE_API_KEY=your_exchangerate_api_key
EXCHANGERATE_API_URL=https://v6.exchangerate-api.com/v6

# Fixer.io
FIXER_API_KEY=your_fixer_api_key
FIXER_API_URL=https://api.fixer.io/latest

# CurrencyAPI.com
CURRENCYAPI_KEY=your_currencyapi_key
CURRENCYAPI_URL=https://api.currencyapi.com/v3

# ==========================================
# OCR SERVICES
# ==========================================
# Primary OCR Service
OCR_API_KEY=your_ocr_api_key_here
OCR_SERVICE_URL=https://api.ocr.space/parse/image
OCR_SERVICE_PROVIDER=tesseract

# Google Vision API
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_VISION_PROJECT_ID=your_google_project_id

# AWS Textract
AWS_TEXTRACT_REGION=us-east-1

# Microsoft Azure Computer Vision
AZURE_COMPUTER_VISION_KEY=your_azure_cv_key
AZURE_COMPUTER_VISION_ENDPOINT=your_azure_cv_endpoint

# OCR.space API
OCRSPACE_API_KEY=your_ocrspace_api_key
OCRSPACE_API_URL=https://api.ocr.space/parse/image

# ==========================================
# AI/ML SERVICES
# ==========================================
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your_openai_api_key_here

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_THRESHOLD_AMOUNT=1000
ANOMALY_THRESHOLD_FREQUENCY=5

# Auto-categorization
AUTO_CATEGORIZATION_ENABLED=true
AUTO_CATEGORIZATION_CONFIDENCE_THRESHOLD=0.8

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_DETECTION_RISK_THRESHOLD=0.7

# ==========================================
# EMAIL SERVICES
# ==========================================
# Primary Email Service
EMAIL_SERVICE_PROVIDER=sendgrid

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@company.com
SMTP_PASS=your_email_password

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@expense-management.com
SENDGRID_FROM_NAME=Expense Management System

# Mailgun
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_HOST=api.mailgun.net

# ==========================================
# SMS SERVICES
# ==========================================
# Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS SNS
AWS_SNS_REGION=us-east-1
AWS_SNS_ACCESS_KEY_ID=your_aws_access_key
AWS_SNS_SECRET_ACCESS_KEY=your_aws_secret_key

# ==========================================
# REAL-TIME NOTIFICATIONS
# ==========================================
# Socket.IO Configuration
SOCKET_IO_ORIGINS=http://localhost:3000
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_PATH=/socket.io
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Pusher Configuration (Alternative)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=us2

# Firebase Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ==========================================
# LOGGING & MONITORING
# ==========================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# Application Performance Monitoring
APM_SERVICE_NAME=expense-management-api
APM_SERVICE_VERSION=1.0.0
APM_ENVIRONMENT=development

# New Relic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Expense Management API

# DataDog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Sentry
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# ==========================================
# RATE LIMITING & SECURITY
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# API Rate Limits (per minute)
API_RATE_LIMIT_AUTH=10
API_RATE_LIMIT_EXPENSE=50
API_RATE_LIMIT_UPLOAD=20
API_RATE_LIMIT_OCR=10

# Security Headers
SECURITY_HELMET_ENABLED=true
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_CORS_ENABLED=true
SECURITY_BODY_PARSER_LIMIT=10mb

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'
CSP_IMG_SRC='self' data: https:

# ==========================================
# CACHE CONFIGURATION
# ==========================================
# Cache TTL (Time To Live) in seconds
CACHE_TTL_USER_SESSION=3600
CACHE_TTL_CURRENCY_RATES=3600
CACHE_TTL_EXPENSE_DATA=1800
CACHE_TTL_COMPANY_SETTINGS=7200

# ==========================================
# ANALYTICS & METRICS
# ==========================================
ANALYTICS_ENABLED=true
METRICS_COLLECTION_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Google Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
GA_TRACKING_ID=your_google_analytics_id

# Custom Analytics
CUSTOM_ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com
CUSTOM_ANALYTICS_API_KEY=your_custom_analytics_key

# ==========================================
# WEBHOOK CONFIGURATION
# ==========================================
WEBHOOKS_ENABLED=true
WEBHOOK_SECRET=your_webhook_secret_for_verification
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# External System Webhooks
ERP_WEBHOOK_URL=https://your-erp-system.com/webhook
PAYROLL_WEBHOOK_URL=https://your-payroll-system.com/webhook

# ==========================================
# API DOCUMENTATION
# ==========================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs
SWAGGER_TITLE=Expense Management API
SWAGGER_DESCRIPTION=Enterprise Expense Management System API
SWAGGER_VERSION=1.0.0
SWAGGER_CONTACT_EMAIL=api@expense-management.com

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_OCR_ENABLED=true
FEATURE_CURRENCY_CONVERSION_ENABLED=true
FEATURE_ANOMALY_DETECTION_ENABLED=true
FEATURE_REAL_TIME_NOTIFICATIONS_ENABLED=true
FEATURE_MOBILE_APP_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true

# ==========================================
# BUSINESS RULES
# ==========================================
# Expense Limits
DEFAULT_EXPENSE_LIMIT=5000
MANAGER_APPROVAL_THRESHOLD=500
FINANCE_APPROVAL_THRESHOLD=2000
DIRECTOR_APPROVAL_THRESHOLD=10000

# Approval Timeouts (in hours)
APPROVAL_TIMEOUT_MANAGER=72
APPROVAL_TIMEOUT_FINANCE=48
APPROVAL_TIMEOUT_DIRECTOR=24

# Currency Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,AUD,JPY,INR

# Company Settings
AUTO_COMPANY_CREATION=true
REQUIRE_MANAGER_ASSIGNMENT=true
ENFORCE_EXPENSE_CATEGORIES=true

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================
# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true

# Testing Configuration
JEST_TIMEOUT=30000
TEST_DATABASE_URL=mongodb://localhost:27017/expense_management_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock Services (for testing)
MOCK_CURRENCY_API=false
MOCK_OCR_SERVICE=false
MOCK_EMAIL_SERVICE=false

# ==========================================
# TIMEZONE & LOCALIZATION
# ==========================================
DEFAULT_TIMEZONE=UTC
SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,zh
DEFAULT_LOCALE=en
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# ==========================================
# BACKUP & MAINTENANCE
# ==========================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000

# ==========================================
# NOTES
# ==========================================
# 1. Never commit this file with real credentials to version control
# 2. Use environment-specific files (.env.development, .env.production)
# 3. Consider using a secrets management service for production
# 4. Regularly rotate API keys and secrets
# 5. Keep this file updated when adding new environment variables